<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<div class="container-fluid">
<%= @product.name %>

<% @product.properties.each do |p| %>
<div class="row">
  <div class="col-xs-2"><%= p.first %></div>
  <div class="col-xs-2"><%= p.last %></div>
  <div class="col-xs-2"><%= link_to 'Remover', admin_product_properties_remove_path(@product, { :key => p.first, :value => p.last}) %></div>
</div>
<% end %>
</div>

<%= form_tag(:admin_product_properties_save, method: "post") do %>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Opção</label>
  <div class="col-sm-2">
    <%= select_tag(:key, options_for_select(@options.map {|b| [b.name, b.name] })) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Valor</label>
  <div class="col-sm-2">
    <%= text_field_tag(:value) %>
  </div>
</div>
<%= submit_tag("Add") %>
<% end %>
