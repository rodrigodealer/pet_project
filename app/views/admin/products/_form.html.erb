<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Nome</label>
  <div class="col-sm-10">
    <%= text_field(:product, :name) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Marca</label>
  <div class="col-sm-10">
    <%= select(:product, :brand_id, options_for_select(@brands.map {|b| [b.name, b.id] })) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Preço</label>
  <div class="col-sm-10">
    <%= text_field(:product, :price) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Disponível</label>
  <div class="col-sm-10">
    <%= check_box(:product, :available) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Descrição</label>
  <div class="col-sm-10">
    <%= text_area(:product, :description, :rows => 10, :cols => 80) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Altura (cm)</label>
  <div class="col-sm-10">
    <%= text_field(:product, :height, :size => 3, :maxlength => 3) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Largura (cm)</label>
  <div class="col-sm-10">
    <%= text_field(:product, :width, :size => 3, :maxlength => 3) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Profundidade (cm)</label>
  <div class="col-sm-10">
    <%= text_field(:product, :depth, :size => 3, :maxlength => 3) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Peso (g)</label>
  <div class="col-sm-10">
    <%= text_field(:product, :weight, :size => 5, :maxlength => 5) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Fotos</label>
  <div class="col-sm-10">
    <%= file_field :product, :files, multiple: true %>
  </div>
</div>
<div class="form-group">
  <% @product.files.each do |f| %>
  <div class="col-sm-2">
      <a href="<%= f.url %>" target="_blank"><img src="<%= f.mini.url %>" /></a>
  </div>
  <% end %>
</div>
<div class="form-group">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <%= submit_tag 'Salvar' %>
  </div>
</div>
