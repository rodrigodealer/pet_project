<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Nome</label>
  <div class="col-sm-10">
    <%= text_field(:product, :name) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Marca</label>
  <div class="col-sm-10">
    <%= select(:product, :brand_id, options_for_select(@brands.map {|b| [b.name, b.id] })) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Preço</label>
  <div class="col-sm-10">
    <%= text_field(:product, :price) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Disponível</label>
  <div class="col-sm-10">
    <%= check_box(:product, :available) %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <%= submit_tag 'Salvar' %>
  </div>
</div>
