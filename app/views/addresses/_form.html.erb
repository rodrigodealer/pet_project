<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Apelido</label>
  <div class="col-sm-10">
    <%= text_field(:address, :label) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Tipo de endereço</label>
  <div class="col-sm-10">
    <!-- <%= text_field(:address, :kind) %> -->
    <%= select(:address, :kind, [['Cobrança', 'B'], ['Entrega', 'D']], { include_blank: true }) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Rua</label>
  <div class="col-sm-10">
    <%= text_field(:address, :street) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Número</label>
  <div class="col-sm-10">
    <%= text_field(:address, :number, :size => 10, :maxlength => 10) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Complemento</label>
  <div class="col-sm-10">
    <%= text_field(:address, :other) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">CEP (apenas números)</label>
  <div class="col-sm-10">
    <%= text_field(:address, :zip, :size => 9, :maxlength => 9) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Bairro</label>
  <div class="col-sm-10">
    <%= text_field(:address, :neighborhood) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Cidade</label>
  <div class="col-sm-10">
    <%= text_field(:address, :city) %>
  </div>
</div>
<div class="form-group">
  <label for="brand" class="col-sm-2 control-label">Estado</label>
  <div class="col-sm-10">
    <%= text_field(:address, :state) %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <%= submit_tag 'Salvar' %>
  </div>
</div>
